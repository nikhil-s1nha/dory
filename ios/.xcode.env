# .xcode.env - Xcode build environment configuration
# This file is used by React Native's Xcode build scripts

# Node binary path - auto-detect from PATH
export NODE_BINARY=$(command -v node)

# React Native path - set explicitly for Xcode builds
export REACT_NATIVE_PATH="${SRCROOT}/../node_modules/react-native"

# Uncomment to skip bundling during Xcode builds (faster builds during development)
# export SKIP_BUNDLING=1

# Uncomment to use a custom entry file
# export ENTRY_FILE=index.js

# Uncomment for verbose React Native bundling output
# export VERBOSE=1
